* {
    box-sizing: border-box;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  
  .title {
    font-size: 54px;
    font-weight: 300;
    margin-bottom: 54px;
  }
  .title small {
    font-size: 16px;
  }
  
  .link {
    display: block;
    color: rgba(0, 0, 0, 0.54);
    margin-top: 54px;
  }
  
  .checkbox-input {
    display: none;
  }
  
  .checkbox-label, .checkbox-text, .checkbox-text--description {
    -webkit-transition: all 0.4s ease;
    transition: all 0.4s ease;
  }
  
  .checkbox-label {
    display: inline-block;
    vertical-align: top;
    position: relative;
    width: 100%;
    height: 650px;
    padding: 30px 10px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 400;
    margin: 16px 0;
    border: 1px solid #cccccc;
    border-radius: 2px;
    box-shadow: inset 0 0 0 0 #2196F3;
    background-color: #efefef;
  }
  .checkbox-label:before {
    content: "";
    position: absolute;
    top: 75%;
    right: 16px;
    width: 40px;
    height: 40px;
    opacity: 0;
    background-color: #2196F3;
    background-position: center;
    background-repeat: no-repeat;
    background-size: 24px;
    border-radius: 50%;
    -webkit-transform: translate(0%, -50%);
    transform: translate(0%, -50%);
    -webkit-transition: all 0.4s ease;
    transition: all 0.4s ease;
  }
  
  .checkbox-text--title {
    font-weight: 900;
    text-align: center;
    font-size: 19px;
  }
  .checkbox-text--description {
    font-size: 14px;
    border-top: 1px solid #cccccc;
    text-align: center;
    font-weight: 900;
    
  }
  .checkbox-text--description .un {
    display: inline-block;
  }
   .disattiva-click{
    pointer-events: none;
   }
  
  .checkbox-input:checked + .checkbox-label {
    border-color: #2196F3;
    box-shadow: inset 0 -12px 0 0 #2196F3;
    background-color: #fff;
  }
  .checkbox-input:checked + .checkbox-label:before {
    top: 0;
    opacity: 1;
  }
  .checkbox-input:checked + .checkbox-label .checkbox-text {
    -webkit-transform: translate(0, -8px);
    transform: translate(0, -8px);
  }
  .checkbox-input:checked + .checkbox-label .checkbox-text--description {
    border-color: #2196F3;
  }
  .checkbox-input:checked + .checkbox-label .checkbox-text--description .un {
    display: none;
  }
  
  @media screen and (min-width: 540px) {
    .checkbox-label {
      width: 450px;
    }
  }