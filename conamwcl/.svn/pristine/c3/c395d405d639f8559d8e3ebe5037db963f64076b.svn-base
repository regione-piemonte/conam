<div class="form-group row">
  <shared-template-intestazione
    [datiTemplate]="data"
    [datiCompilati]="datiCompilati"
    (formValid)="setFormIntestazioneValid($event)"
  >
  </shared-template-intestazione>
  <form #formTemplate="ngForm">
    <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12 text-right">
      <shared-template-soggetti
        [listaSoggetti]="data.listaSoggetti"
        *ngIf="data != null && data.listaSoggetti != null"
      >
      </shared-template-soggetti>
    </div>

    <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        OGGETTO:
        <input
          type="text"
          id="ogg"
          class="form-control"
          name="ogg"
          *ngIf="!isAnteprima && !isStampa"
          [(ngModel)]="datiCompilati.oggettoLettera"
          required
        />
        <div *ngIf="isAnteprima || isStampa">
          {{ datiCompilati.oggettoLettera }}
        </div>
      </div>
    </div>

    <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        Con sentenza in oggetto il Giudice ha disposto
        <textarea
          style="resize: none"
          id="testoLib"
          class="form-control"
          name="testoLib"
          rows="10"
          [(ngModel)]="datiCompilati.corpoLettera"
          required
          placeholder="Descrizione"
          *ngIf="!isAnteprima && !isStampa"
        ></textarea>
        <div *ngIf="isAnteprima || isStampa">
          {{ datiCompilati.corpoLettera }}
        </div>
      </div>
    </div>

    <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        {{ datiCompilati.datiLetteraAnnullamento.salutiLettera }}
      </div>
    </div>

    <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div
        class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-right padding-top-25"
      >
        Il Dirigente del Settore
      </div>
      <div
        class="col-xs-12 col-sm-12 col-md-3 col-lg-3 col-md-offset-9 col-lg-offset-9 text-right"
      >
        {{ datiCompilati.datiLetteraAnnullamento.dirigenteLettera }}
      </div>
      <div
        class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-md-offset-8 col-lg-offset-8 text-right"
      >
        {{ data.dirigente }}
      </div>
    </div>

    <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div
        class="col-xs-12 col-sm-12 col-md-12 col-lg-12 small-font"
        *ngIf="data.funzionario"
      >
        / {{ datiCompilati.datiLetteraAnnullamento.inizialiLettera }}
      </div>
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 small-font">
        Corso Regina Margherita, 153 bis
      </div>
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 small-font">
        10122 Torino
      </div>
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 small-font">
        Tel: 011 4321288
      </div>
      
    </div>
  </form>
</div>
