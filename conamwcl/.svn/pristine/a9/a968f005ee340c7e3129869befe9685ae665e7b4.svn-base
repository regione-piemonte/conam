table {
  border-collapse: collapse;
  background-color:#f9f9f9;
  border:none;
  margin: 0;
  padding: 0;
  width: 100%;
  table-layout: auto
}

.responsive {
  word-wrap: break-word;
}

table caption {
  font-size: 1.5em;
  margin: .5em 0 .75em;
}

table tr {
  border-bottom: 1px solid #ddd;
  padding: .35em;
}

table th,
table td {
  padding: .625em;
  text-align: center;
}

table tr:nth-child(even) {
  background-color: #edecec
}

.elem-1,
.elem-2,
.elem-3 {
  text-align: center;
}

